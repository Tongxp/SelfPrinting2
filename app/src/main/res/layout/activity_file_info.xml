<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.njcc.main.FileInfoActivity"
    android:background="@drawable/infofile"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_marginTop="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="180dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:src="@drawable/infoname"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:textSize="23dp"
                android:lines="1"
                android:textAlignment="center"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:src="@drawable/infotype"/>
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:textSize="23dp"
                android:textAlignment="center"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:src="@drawable/infopages"/>
            <TextView
                android:id="@+id/tv_pages"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:textSize="23dp"
                android:textAlignment="center"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:src="@drawable/infocost"/>
            <TextView
                android:id="@+id/tv_cost"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:textSize="23dp"
                android:textAlignment="center"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp">
            <ImageView
                android:id="@+id/btn_payToPrint"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/infoafford"
                android:onClick="toPay"/>
            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/infoback"
                android:onClick="toBack"/>
        </LinearLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
